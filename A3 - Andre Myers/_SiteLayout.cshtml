                        </ul>
                    </section>
                </header>
            </div><!-- row -->
        </div><!-- container -->


        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix JustifyCenter">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="navbar-fixed-bottom">&copy; @DateTime.Now.Year - Andre Myers</p>
                </div>
            </div>
        </footer>
        @RenderSection("Scripts", required: false)
    </div>
</body>
</html>